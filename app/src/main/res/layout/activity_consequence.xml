<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdc500"
    tools:context=".controller.ConsequenceActivity">

    <Button
        android:id="@+id/backToGame"
        android:layout_width="340dp"
        android:layout_height="102dp"
        android:layout_marginBottom="60dp"
        android:text="Got it!"
        android:textColor="#fdc500"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:backgroundTint="#be000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consequence"
        app:layout_constraintVertical_bias="0.952" />

    <TextView
        android:id="@+id/consequence"
        android:layout_width="792dp"
        android:layout_height="847dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/background"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>