<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.GameActivity">

    <TextView
        android:id="@+id/gameQuestionText"
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/question"
        android:textColor="@color/design_default_color_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gameAnswer1btn"
        tools:layout_editor_absoluteX="5dp"/>

    <Button
        android:id="@+id/gameAnswer1btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:text="@string/answer1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gameAnswer2btn"
        tools:layout_editor_absoluteX="9dp"/>

    <Button
        android:id="@+id/gameAnswer2btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:text="@string/answer2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gameAnswer3btn"
        tools:layout_editor_absoluteX="40dp"/>

    <Button
        android:id="@+id/gameAnswer3btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:text="@string/answer3"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gameAnswer4btn"
        tools:layout_editor_absoluteX="16dp"/>

    <Button
        android:id="@+id/gameAnswer4btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:text="@string/answer4"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>